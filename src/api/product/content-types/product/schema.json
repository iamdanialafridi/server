{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "productTitle": {
      "type": "string",
      "required": true,
      "maxLength": 70,
      "minLength": 5
    },
    "description": {
      "type": "richtext",
      "required": true,
      "minLength": 10
    },
    "price": {
      "type": "float",
      "required": true,
      "max": 10000,
      "min": 2
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "size": {
      "type": "json"
    },
    "type": {
      "type": "string",
      "default": "new",
      "required": true
    },
    "color": {
      "type": "json"
    }
  }
}
